  <%= form.label :name, 'Category Type' %>
  <% custom_options = ["A", "B", "C"] %>
 <%= form.select :name, options_for_select(custom_options, "Select options"), {} %>

  </div>

  <div class="actions">
    <%= form.submit 'Save' %>
  </div>
<% end %>
