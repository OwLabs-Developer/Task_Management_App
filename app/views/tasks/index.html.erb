<h1>Your Tasks</h1>

<div class="center-container">
<%= search_form_for @q do |f| %>

<div class= "form">
    <%= f.label :title_or_category_name_cont, "Search Title or Category", class: "input-label" %>
    <%= f.text_field :title_or_category_name_cont %>
    <%= f.submit "Search", class: "button" %>
    <%= link_to "Refresh", tasks_path, class: "button" %>
</div>

<% end %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Due Date</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.due_date %></td>
        <td><%= task.priority %></td>
        <td><%= task.status ? 'Completed' : 'Pending' %></td>
        <td>
          <% if task.category %>
            <%= task.category.name %>
          <% else %>
          <% end %>
        </td>
        <td>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary' %>
          <%= form_with(model: task, method: :delete) do |form| %>
            <%= form.submit 'Delete', class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Task', new_task_path %>

</div>

