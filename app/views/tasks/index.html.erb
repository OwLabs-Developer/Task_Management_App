<h1>Your Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Due Date</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.due_date %></td>
        <td><%= task.priority %></td>
        <td><%= task.status ? 'Completed' : 'Pending' %></td>
        <td><%= task.category %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary' %></td>
        <td>
                    <%= form_with(model: task, method: :delete) do |form| %>
                        <%= form.submit 'Delete', class: 'btn btn-danger' %>
                    <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path %>
