<% content_for :title, "Reset Password" %>
<div class="center-container">
  <h1>Reset Password</h1>
  <%= form_with(model: @user, url: password_reset_path, method: :patch) do |f| %>
    <div class="field">
      <%= f.label :password, "New Password" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <%= f.hidden_field :token, value: params[:token] %>
    <%= f.hidden_field :username, value: params[:username] %>
    <div class="actions">
      <%= f.submit "Reset Password", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
